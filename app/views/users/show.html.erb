<h1>Listing Articles</h1>
<% if user_signed_in? %>
  <%= link_to 'New article', new_user_article_path(current_user.id) %>
<% else %>
  fuck off
<% end %>
<br>
<%= link_to 'Home', root_path%>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
<% if user_signed_in? %>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', user_article_path(current_user.id, article.id) %></td>
      <td><%= link_to 'Edit', edit_user_article_path(current_user.id, article.id) %></td>
      <td><%= link_to 'Destroy', user_article_path(current_user.id, article.id),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
<% else %>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
    </tr>
  <% end %>
<% end %>

</table>
