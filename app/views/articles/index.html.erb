<h1>All Articles from all users</h1>
<div style="margin: 20px;">
  <%= link_to 'Home',root_path, :class => "btn btn-light" %>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Text</th>
      <th scope="col">Id</th>
      <th scope="col">Email</th>
      <th scope="col">Comments</th>
      <th scope="col">Show</th>
      <% if user_signed_in? %>
        <th scope="col">Save</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @articles.includes(:user).each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= article.id %></td>
        <td><%= article.user.email %></td>
        <td><%= article.comments.count %></td>
        <td><%= link_to 'Show', article_path(article.id), :class => "btn btn-light" %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Save', user_articles_path(id: article.id), method: :create, :class => "btn btn-light" %></td>
        <%end%>
      </tr>
    <% end %>
    </tr>
  </tbody>
</table>
