<h1>New article</h1>
<%= form_with model: @article, url: articles_path, :html => {:class => "form-horizontal center"}, local: true do |form| %>
<% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <div class="form-group">
      <%= form.label :title, class: "col-md-4 control-label" %><br>
      <div class="col-md-8">
        <%= form.text_field :title %>
      </div>
    </div>
  </p>
  <p>
    <div class="form-group">
      <%= form.label :text, class: "col-md-4 control-label" %><br>
      <div class="col-md-8">
        <%= form.text_area :text, class: "col-md-4 control-label" %>
      </div>
    </div>
  </p>
  <p>
    <%= form.submit class: 'btn btn-primary'%>
  </p>
<% end %>

