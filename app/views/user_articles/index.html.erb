<h1>Saved Articles</h1>
<br>
<%= link_to 'Home', root_path%>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Email</th>
    <th colspan="4"></th>
  </tr>
  <% @saved_aritcles.includes(:user).each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.user.email %></td>
      <td><%= link_to 'Show', article_path(article.id) %></td>
      <td><%= link_to 'Remove', user_article_path(id: article.id), 
            method: :delete, 
            data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
